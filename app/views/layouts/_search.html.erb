<%= form_with url: search_path, local: true, method: :get, class: 'form-inline' do |f| %>
  <%= f.text_field :word, class: 'form-control' , placeholder: "キーワード" %>
  <%= f.select :range, options_for_select([['ユーザー'], ['Challenge Theme'], ['タグ']]), {}, { class: 'form-control' } %>
  <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]), {}, { class: 'form-control' } %>
  <%= f.submit "検索", class: "btn btn-secondary form-control" %>
<% end %>