<div class='container my-5'>
  <div class='row'>
    <h2 class="mx-auto">Today's Challenge</h2>
  </div>

  <div class='row'>
    <h1 class="px-3 mx-auto border"><%= @daily_theme %></h1>
  </div>

  <%= form_with model: @post do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>

    <div class="form-group">
      <label for="post_image">写真</label>
      <%= f.file_field :image, class: "form-control-file image", accept: 'image/*' %>
    </div>

    <div class="form-group">
      <label for="post_body">説明</label>
      <%= f.text_area :body, class: 'form-control body', maxlength: 150 %>
    </div>

    <div class="form-group">
      <label for="tag_name">間に","を入力することで複数のタグを付けることができます。</label>
      <%= f.text_field :name, class: 'form-control name', maxlength: 50 %>
    </div>

    <div class="form-group">
      <%= f.submit "投稿する", class: 'btn btn-outline-success rounded-pill' %>
    </div>
  <% end %>

</div>