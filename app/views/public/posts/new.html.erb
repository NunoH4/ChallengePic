<div class='container mt-5'>

  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class='row'>
    <h2 class="px-3 mx-auto">Today's Challenge</h2>
  </div>
  
  <div class='row'>
    <h2 class="px-3 mx-auto"><%= @daily_theme %></h2>
  </div>

  <%= form_with model: @post do |f| %>
    <div class="form-group">
      <label for="image">写真</label>
      <%= f.file_field :image, class: "form-control-file post_image", accept: 'image/*' %>
    </div>
    
    <div class="form-group">
      <label for="body">説明</label>
      <%= f.text_area :body, class: 'form-control post_body' %>
    </div>
    
    <div class="form-group">
      <label for="name">","を入力することで複数のタグを付けることができます。</label>
      <%= f.text_field :name, class: 'form-control name' %>
    </div>
    
    <div class="form-group">
      <%= f.submit "投稿する", class: 'btn btn-success' %>
    </div>
  
    <!--<label for="tag">タグ(,で区切ると複数タグ登録できます)</label>-->
