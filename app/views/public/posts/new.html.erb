<div class='container'>

  <div class='row'>
    <h1 class="px-3 mx-auto">投稿フォーム</h1>
  </div>

  <div class='row'>
    <h2 class="px-3 mx-auto">Today's Challenge</h2>
  </div>
  
  <div class='row'>
    <p class="px-3 mx-auto">（日替わりで表示内容変える）</p>
  </div>

  <%= form_with model: @post do |f| %>
  <div class="form-group">
    <label for="image">写真</label>
    <%= f.file_field :image, class: "form-control-file post_image", accept: 'image/*' %>
  </div>
  
  <div class="form-group">
    <label for="body">説明</label>
    <%= f.text_area :body, class: 'form-control post_body' %>
  </div>
  
  <div class="form-group">
    <%= f.submit "投稿する", class: 'btn btn-success' %>
  </div>
  
  <% end %>
  
</div>