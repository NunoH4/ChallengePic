<div class="container my-5">

  <div class="row d-flex justify-content-center">
    <%= image_tag @post.image.variant(resize_to_limit: [400, 400]), class: "mt-3"; %>
  </div>
  
  <div class="text-center">
    <h4 class="mt-3">Challenge Theme: <%= @post.theme %></h4>
  </div>
  
  <%= form_with model: @post do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    
    <div class="form-group">
      <label for="post_body">説明</label>
      <%= f.text_area :body, class: "form-control body", maxlength: 150 %>
    </div>
    
    <div class="form-group">
      <label for="tag_name">間に","を入力することで複数のタグを付けることができます。</label>
      <%= f.text_field :name, value: @tag_list, class: "form-control name", maxlength: 50 %>
    </div>
    
    <div class="form-group">
      <%= f.submit "変更を保存する", class: "btn btn-outline-success rounded-pill mr-1" %>
      <%= link_to "投稿を削除する", @post, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-outline-danger rounded-pill" %>
    </div>
  <% end %>
</div>
