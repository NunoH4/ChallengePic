<div class='container my-5'>
  <div class='row'>
    <h2 class="mx-auto">"<%=@tag.name%>"のタグが付けられた投稿一覧</h2>
  </div>

  <div class='row mt-3'>
    <% @posts.each do |post| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <%= link_to post_path(post.id), class: "text-dark text-decoration-none" do %>
            <%= image_tag post.image.variant(resize_to_limit: [300, 300]), class: "bd-placeholder-img card-img-top" %>
            <div class="card-body">
              <h5 class="card-title text-dark text-decoration-none">Challenge Theme:</h5>
              <h5 class="card-text text-dark text-decoration-none"><%= post.theme %></h5>
              <p>user: <%= post.member.name %></p>
              <small class="text-muted">posting date: <%= post.created_at.strftime("%Y/%m/%d %H:%M") %></small>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>