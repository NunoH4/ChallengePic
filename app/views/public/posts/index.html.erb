<div class='container'>
  <div class='row'>
    <h1 class="px-3 mx-auto">投稿一覧</h1>
  </div>
  
  <div class='row'>
    <table>
      <thead>
        <tr>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= image_tag post_image.get_image(100,100), class:"mt-3"; %></td>
            <td><%= post.body %></td>
            <td><%= link_to 'Show', post_path(post.id) %></td>
            <td><%= link_to 'Edit', edit_post_path(post.id) %></td>
            <td><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>