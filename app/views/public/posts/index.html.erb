<div class='container mt-5'>
  <div class='row'>
    <h1 class="px-3 mx-auto">投稿一覧</h1>
  </div>
  
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4">
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.image, class: "img-fluid mt-3" %>
        <% end %>
      </div>
    <% end %>
  </div>
  
</div>