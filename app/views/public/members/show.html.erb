<div class="container mt-5">
  <div class="row d-flex justify-content-center">
    <% if @member.profile_image.attached? %>
      <%= image_tag @member.profile_image.variant(resize: '100x100'), class: "rounded-circle" %>
    <% else %>
      <%= image_tag "no_image.jpg", class: "rounded-circle", size: '100x100' %>
    <% end %>
  </div>
  
  <div class="row mt-1 d-flex justify-content-center">
    <h3><%= @member.name %></h3>
  </div>
  
  <div class="row d-flex justify-content-center">
    <p><%= @member.introduction %></p>
  </div>
  
  <div class="row justify-content-end">
    <% if @member == current_member %>
      <%= link_to edit_member_path(@member), class: "text-body" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    <% end %>
  </div>
   
  <div class="row mt-5 d-flex justify-content-center">
    <p><i class="far fa-images mr-1"></i>投稿</p>
  </div>
  
  <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
    <% if @posts.present? %>
      <%= render "public/posts/index", posts: @posts %>
    <% else %>
      <p>投稿がまだありません。</p>
    <% end %>
  </div>
  
  <div class="row mt-5 d-flex justify-content-center">
    <p><i class="fas fa-heart mr-1"></i>お気に入りした投稿</p>
  </div>
  
  <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
    <% if @favorite_list.present? %>
      <%= render "public/posts/index", posts: @favorite_list %>
    <% else %>
      <p>お気に入りがありません。</p>
    <% end %>
  </div>