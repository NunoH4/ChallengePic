<div class='container mt-5'>

  <div class='row'>
    <h2 class="px-3 mx-auto">ユーザー情報編集</h2>
  </div>

  <%= form_with model: @member do |f| %>
    <div class="form-group">
      <label for="profile_image">プロフィール画像</label>
      <%= f.file_field :profile_image, class: "form-control-file profile_image", accept: 'image/*' %>
    </div>
    
    <div class="form-group">
      <label for="name">ユーザー名</label>
      <%= f.text_field :name, class: 'form-control name' %>
    </div>
    
    <div class="form-group">
      <label for="introduction">自己紹介</label>
      <%= f.text_area :introduction, class: 'form-control introduction' %>
    </div>
    
    <div class="form-group">
      <%= f.submit "更新する", class: 'btn btn-success rounded-pill' %>
    </div>
  <% end %>
  
  <%= link_to "退会する", leave_member_path, class: "btn btn-danger rounded-pill"  %>
  
</div>