<div class="jumbotron jumbotron-fluid">
  <div class="container text-white">
    <h2>Today's Challenge</h2>
    <h1 class="px-3 border"><%= @daily_theme %></h1>
  </div>
</div>

<!--タブメニュー-->
<div class="container mt-5">
  <ul class="nav justify-content-center" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active text-black-50 font-weight-bold tab" id="new-tab" data-toggle="tab" href="#new" role="tab" aria-controls="new" aria-selected="true">新着</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link text-black-50 font-weight-bold tab" id="ranking-tab" data-toggle="tab" href="#ranking" role="tab" aria-controls="ranking" aria-selected="false">月間TOP3</a>
    </li>
  </ul>
  
  <!--ライン-->
  <div class="col border-top"></div>
  
  <!--タブコンテンツ-->
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="new" role="tabpanel" aria-labelledby="new-tab">
        <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
          <%= render "public/posts/index", posts: @posts %>
        </div>
        <%= paginate @posts %>
    </div>
    <div class="tab-pane fade" id="ranking" role="tabpanel" aria-labelledby="ranking-tab">
      <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
        <%= render "public/posts/index", posts: @rank_posts %>
      </div>
    </div>
  </div>
</div>

</div>