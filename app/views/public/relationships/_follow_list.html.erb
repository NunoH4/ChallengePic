<% if @members.exists? %>
  <% @members.each do |member| %>
    <table class='table'>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
          <tr>
            <td><%= image_tag member.get_profile_image, size: '50x50' %></td>
            <td><%= member.name %></td>
            <td>フォロー数: <%= member.followings.count %></td>
            <td>フォロワー数: <%= member.followers.count %></td>
            <td><%= link_to 'Show', member %></td>
          </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>