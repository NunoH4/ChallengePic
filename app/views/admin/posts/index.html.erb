<div class="container my-5">

<div class="row mt-5 d-flex justify-content-center">
  <h3><%= @member.name %>さんの投稿一覧</h3>
</div>

<div class="row">
  <% if @posts.present? %>
    <table class="table table-striped mt-3">
      <thead>
        <tr class="text-center">
          <th>投稿ID</th>
          <th>Challenge Theme</th>
          <th>説明</th>
          <th>投稿日時</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr class="text-center">
            <td><%= post.id %></td>
            <td style="word-break: break-all;"><%= post.theme %></td>
            <td style="word-break: break-all;"><%= post.body %></td>
            <td><%= post.created_at.strftime("%Y/%m/%d %H:%M") %></td>
            <td><%= link_to "詳細", post_path(post.id), class: "btn btn-sm btn-primary" %></td>
            <td><%= link_to "削除", admin_member_post_path(@member, post), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col text-center">
      <%= paginate @posts %>
    </div>
  <% else %>
    <p class="mt-3">投稿はありません</p>
  <% end %>
</div>
</div>