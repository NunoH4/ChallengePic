 <div class="container my-5">
 
  <div class="row mt-5 d-flex justify-content-center">
    <h3><%= @member.name %>さんのコメント一覧</h3>
  </div>
  
  <div class="row justify-content-center">
    <% if @post_comments.present? %>
      <table class="table table-striped mt-3">
        <thead>
          <tr class="text-center">
            <th>コメントID</th>
            <th>コメント</th>
            <th>投稿日時</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @post_comments.each do |post_comment| %>
            <tr>
              <td><%= post_comment.id %></td>
              <td style="word-break: break-all;"><%= post_comment.comment %></td>
              <td><%= post_comment.created_at.strftime("%Y/%m/%d %H:%M") %></td>
              <td><%= link_to "詳細", post_path(post_comment.post), class: "btn btn-sm btn-primary" %></td>
              <td><%= link_to "削除", admin_member_post_comment_path(@member, post_comment), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-danger" %></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="mt-3">コメントはありません</p>
    <% end %>
  </div>
</div>