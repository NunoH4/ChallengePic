<div class="container my-5">
  <div class="row">
    <h3 class="mx-auto">
      <%= @member.name%>さんの登録情報編集
    </h3>
  </div>
  
  <div class="form-group">
    <label for="profile_image">ユーザーID：</label>
    <%= @member.id %>
  </div>
  
  <%= form_with model: @member, url: admin_member_path(@member.id), method: :patch do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="form-group">
      <label for="profile_image">プロフィール画像</label>
      <%= f.file_field :profile_image, class: "form-control-file profile_image", accept: "image/*" %>
    </div>
    
    <div class="form-group">
      <label for="name">ユーザー名</label>
      <%= f.text_field :name, class: "form-control name" %>
    </div>
    
    <div class="form-group">
      <label for="introduction">自己紹介</label>
      <%= f.text_area :introduction, class: "form-control introduction" %>
    </div>
    
    <div class="form-group">
      <label for="email">メールアドレス</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control email" %>
    </div>
    
    <div class="form-group">
      <label for="introduction">ユーザーステータス：</label>
      <%= f.radio_button :is_deleted, false %>有効　<%= f.radio_button :is_deleted, true %>退会
    </div>
    
    <div class="form-group">
      <%= f.submit "更新する", class: "btn btn-success rounded-pill" %>
    </div>
  <% end %>
</div>